{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "plugins": ["cargo-workspace"],
  "release-type": "rust-workspace",
  "include-component-in-tag": true,
  "packages": {
    "volition-cli": {
      "component": "volition-cli"
    },
    "volition-agent-core": {
      "component": "volition-agent-core"
    },
    "volition-filesystem-server": {
      "component": "volition-filesystem-server"
    },
    "volition-shell-server": {
      "component": "volition-shell-server"
    },
    "volition-git-server": {
      "component": "volition-git-server"
    },
    "volition-search-server": {
      "component": "volition-search-server"
    }
  }
}
